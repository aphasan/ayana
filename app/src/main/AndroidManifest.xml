<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.medinacom.ayana">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SnellenActivity"
            android:label="@string/snellen_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalibrationActivity"
            android:label="@string/calibration_activity_title"
            android:parentActivityName=".SnellenActivity">
        </activity>
        <activity
            android:name=".BluetoothActivity"
            android:label="@string/bluetooth_activity_title"
            android:parentActivityName=".SnellenActivity">
        </activity>
    </application>

</manifest>